on run    -- Fetch the text from the clipboard    set selectedText to the clipboard        -- Define the path and file name    set desktopPath to path to desktop folder as text -- Change as needed    set fileName to "MyNewSwiftFile.swift" -- Change as needed    set filePath to desktopPath & fileName        -- Convert to POSIX path for shell commands    set posixPath to POSIX path of filePath        -- Write the clipboard text to the file    do shell script "echo " & quoted form of selectedText & " > " & quoted form of posixPathend run